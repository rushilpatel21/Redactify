# Redactify Server Environment Variables

# Core Configuration
PORT=8000
CONFIDENCE_THRESHOLD=0.5
MAX_WORKERS=8

# Model Configuration
MAX_MODEL_MEMORY_MB=4096
ENABLE_MEDICAL_PII=True
ENABLE_TECHNICAL_NER=True
ENABLE_PII_SPECIALIZED=True
ENABLE_LEGAL_NER=True
ENABLE_FINANCIAL_NER=True

# Gemini API Configuration (for text classification)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Custom Model Paths
# A2A_GENERAL_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english
# A2A_TECHNICAL_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english
# A2A_LEGAL_MODEL=nlpaueb/legal-bert-base-uncased
# A2A_FINANCIAL_MODEL=ProsusAI/finbert
# A2A_PII_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english